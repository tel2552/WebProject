{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "functions": {
    "main.py": {
      "includeFiles": [
        "templates/**",
        "static/**"
      ]
    }
  },
  "build": {
    "env": {
      "PIP_EXTRA_INDEX_URL": "https://www.piwheels.org/simple",
      "PLAYWRIGHT_BROWSERS_PATH": "0"
    }
  },
  "systemDependencies": [
    "libpango-1.0-0",
    "libpangoft2-1.0-0",
    "libgdk-pixbuf-2.0-0",
    "libcairo2",
    "libharfbuzz0b",
    "libfontconfig1"
  ]
}
