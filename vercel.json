{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9",
        "buildCommand": "bash build.sh && pip install -r requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "functions": {
    "main.py": {
      "includeFiles": [
        "templates/**",
        "static/**"
      ]
    }
  },
  "build": {
    "command": "bash build.sh",
    "env": {
      "PIP_EXTRA_INDEX_URL": "https://www.piwheels.org/simple",
      "PLAYWRIGHT_BROWSERS_PATH": "0"
    }
  }
}
